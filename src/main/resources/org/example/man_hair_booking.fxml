<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<StackPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.NailsBookingController">

    <VBox alignment="CENTER" prefHeight="550.0" prefWidth="700.0" styleClass="root">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <VBox alignment="TOP_CENTER" maxWidth="450.0" spacing="25.0" styleClass="form-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Férfi Hajvágás – Időpontfoglalás" styleClass="header-label"/>

            <VBox alignment="CENTER" spacing="10">
                <Label text="Válasszon dátumot:" styleClass="sub-label"/>
                <DatePicker fx:id="datePicker" styleClass="date-picker" prefWidth="250"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10">
                <Label text="Válasszon időpontot:" styleClass="sub-label"/>
                <ComboBox fx:id="timeCombo" prefWidth="250" styleClass="combo-box"/>
            </VBox>

            <VBox alignment="CENTER" spacing="15.0">
                <Button text="Foglalás véglegesítése" fx:id="btnBook" prefWidth="250" styleClass="primary-button" onAction="#onBookConfirmed"/>
                <Button text="Vissza" fx:id="btnBack" prefWidth="250" styleClass="secondary-button" onAction="#onBackClicked"/>
            </VBox>

        </VBox>
    </VBox>
</StackPane>
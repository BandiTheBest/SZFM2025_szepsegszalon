<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MyAppointmentsController">

    <VBox alignment="CENTER" prefHeight="550.0" prefWidth="700.0" styleClass="root">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <VBox alignment="TOP_CENTER" maxWidth="500.0" spacing="20.0" styleClass="form-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Foglalásaim" styleClass="header-label"/>

            <ListView fx:id="appointmentsListView" prefHeight="300.0" style="-fx-font-size: 14px; -fx-background-color: transparent;"/>

            <VBox alignment="CENTER" spacing="15.0">
                <Button text="Kijelölt foglalás lemondása" onAction="#handleDelete" styleClass="primary-button" style="-fx-background-color: #d9534f;"/>
                <Button text="Vissza a főmenübe" onAction="#handleBack" styleClass="secondary-button"/>
            </VBox>

            <Label fx:id="statusLabel" styleClass="error-label" style="-fx-text-fill: green;"/>

        </VBox>
    </VBox>
</StackPane>